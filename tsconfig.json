{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "target": "ES5",
        "module": "CommonJS",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },

    "include": [
        "server/**/*.ts",
        "server/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
}